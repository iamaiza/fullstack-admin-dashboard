generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  address   String
  phone     String    @unique
  products  Product[]
  deletedAt DateTime?
}

model Product {
  id             Int       @id @default(autoincrement())
  img            String?
  title          String    @unique
  quantity       String
  purchase_price String
  sell_price     String
  supplier_id    Int
  supplier       Supplier  @relation(fields: [supplier_id], references: [id])
  orders         Order[]
  deletedAt      DateTime?
}

model Order {
  id         Int       @id @default(autoincrement())
  quantity   String
  product_id Int
  product    Product   @relation(fields: [product_id], references: [id])
  deletedAt  DateTime?
}
